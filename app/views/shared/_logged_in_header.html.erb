<div class = "header_logo">
  <%= link_to image_tag('https://presite-potepancamp-rails-02.herokuapp.com/assets/logo.png'), :travels %>
</div>

<div class="search_form">
    <%= form_with url: new_travel_path, method: :get, local: true do |f| %>
      <%= f.text_field :keyword, placeholder: "キーワード" %>
      <%= f.text_field :area_word, placeholder: "エリア" %>
      <%= f.submit "検索" %>
    <% end %>
</div>
  
<div class = "dropdown header_button1">
  <a id="dropdown1" class="btn btn-secondary dropdown-toggle account" data-toggle="dropdown">
    <img src = <%= @user.image %> class = "icon_image" >
  </a>
  <div class = "dropdown-menu dropdown-menu-right account_content" aria-labelledby="dropdown1">
    <div class = "account_menu dropdown-item">
      <img src = <%= @user.image %> class = "icon_image" ><br>
      <%= @user.name %>
    </div>
    <li class="dropdown-item"><%= link_to "アカウント情報", user_path(current_user) %></li>
    <li class="dropdown-item"><%= link_to "ルーム登録", new_room_path %></li>
    <li class="dropdown-item"><%= link_to "予約済ルーム一覧", :reservations %></li>
    <li class="dropdown-item"><%= link_to "登録中ルーム一覧", :rooms %></li>
    <li class="dropdown-item"><%= link_to "ログアウト", destroy_user_session_path, method: :delete %></li>
  </div>
</div>