<header>
    
  <% if user_signed_in? %>
    <%= render 'shared/logged_in_header' %>
  <% else %>
    <%= render 'shared/not_logged_in_header' %>
  <% end %>

</header>

<main class = "show_main">
  
  <h3>ルーム編集</h3>
  
  <div class = "information_show">
    <%= render "shared/error", obj: @room %>
  <%= form_with model: @room do |f| %>
    
    <div class="field information">
      <%= f.label :name, "ルーム名" %><br />
      <%= f.text_field :name %>
    </div>
    
    <div class="field information">
      <%= f.label :address, "住所" %><br />
      <%= f.text_field :address %>
    </div>
  
    <div class="field information">
      <%= f.label :image, "写真" %><br />
      <%= f.file_field :image %>
    </div>
  
    <div class="field information">
      <%= f.label :price, "値段(一泊)" %><br />
      <%= f.text_field :price %>
    </div>
    
    <div class="field information">
      <%= f.label :detail, "説明" %><br />
      <%= f.text_area :detail %>
    </div>
  
    <div class="actions">
      <%= f.submit "編集完了" %>
    </div>
  <% end %>
  <p class = "information"><%=link_to "戻る", :back %></p>
</div>
</main>

<footer>
  <%= render "shared/footer" %>
</footer>