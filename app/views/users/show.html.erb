<header>
    
  <% if user_signed_in? %>
    <%= render 'shared/logged_in_header' %>
  <% else %>
    <%= render 'shared/not_logged_in_header' %>
  <% end %>

</header>

<main class = "show_main">
  <p class="notice"><%= flash[:notice] %></p>
  <div class = "information_show">
  
  <h3 class = "information">ユーザー情報</h3>
  
  <p class = "information"><strong>名前:</strong><br><%= @user.name %></p>
  
  <p class = "information"><strong>email:</strong><br><%= @user.email %></p>
  
  <p class = "information"><strong>アイコン:</strong><br><img src=<%= @user.image %> class = "icon_image"></p>
  
  <p class = "information"><strong>自己紹介文:</strong><br><%= @user.introduction %></p>
  
  <p class = "reference"><%= link_to "アカウント編集", edit_registration_path(current_user) %></p>
  <p class = "reference"><%= link_to "アカウントを削除する", ':id/unsubscribe' %></p>
  
  </div>
  
</main>

<footer>
  <%= render "shared/footer" %>
</footer>